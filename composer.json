{
    "name": "caesargustav/scheduler",
    "description": "PHP package to generate schedules for date ranges to use in project or resource planning tools.",
    "keywords": [
        "php",
        "project management",
        "task scheduling"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Kleyersburg",
            "email": "tk@wacg.de"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "nesbot/carbon": "^2.62",
        "ramsey/uuid": "^4.5",
        "illuminate/collections": "^9.34|^v10.7.1|^v11.3.1"
    },
    "require-dev": {
        "pestphp/pest": "^v2.34.7",
        "phpstan/phpstan": "^1.8",
        "spatie/ray": "^1.37"
    },
    "autoload": {
        "psr-4": {
            "CaesarGustav\\Scheduler\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "phpstan": "./vendor/bin/phpstan --memory-limit=2048M"
    }
}
